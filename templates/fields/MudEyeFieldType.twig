{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: 'Meta Title',
    id: id ~ 'seoTitle',
    class: 'nicetext',
    name: name ~ '[seoTitle]',
    value: values.seoTitle,
    required: false,
}) }}

{{ forms.textareaField({
    label: 'Meta Description',
    id: id ~ 'seoDesc',
    class: 'nicetext',
    name: name ~ '[seoDesc]',
    value: values.seoDesc,
    required: false,
}) }}

{{ forms.checkboxField({
    label: 'Disable page in robots.txt',
    id: id ~ 'seoRobots',
    class: 'nicetext',
    name: name ~ '[seoRobots]',
    checked: values.seoRobots ? 1 : 0,
    required: false,
}) }}
